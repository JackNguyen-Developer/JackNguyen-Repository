<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.projectmusic"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />
	
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        
         >
        <activity
            android:name=".Main"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
             >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.project.projectmusic.Content" android:screenOrientation="portrait"/>
		<service android:name="com.project.projectmusic.MusicService"></service>
		<activity android:name="com.project.projectmusic.MusicPlay" android:screenOrientation="portrait"></activity>
		<activity android:name="com.project.projectmusic.Player" android:screenOrientation="portrait"></activity>
		<activity android:name="com.project.projectmusic.NotificationController"></activity>
    </application>

</manifest>
